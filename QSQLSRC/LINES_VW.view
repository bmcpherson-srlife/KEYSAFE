CREATE OR REPLACE VIEW LINES_VIEW
(
  LINK,
  DESCRIPTION_SHORT FOR COLUMN DES_SHORT,
  DESCRIPTION_LONG FOR COLUMN DES_LONG,
  USERNAME,
  USER_PASSWORD FOR COLUMN PWD,
  URL,
  REMARKS,
  STAMP,
  LAST_USER
)

AS

WITH BASE (LINK, DESCRIPTION_SHORT, DESCRIPTION_LONG, USERNAME, USER_PASSWORD, URL,
           REMARKS, STAMP, LAST_USER)

AS

(SELECT LINK, DECRYPT_CHAR(DESCRIPTION_SHORT), DECRYPT_CHAR(DESCRIPTION_LONG),
        DECRYPT_CHAR(USERNAME), DECRYPT_CHAR(USER_PASSWORD), DECRYPT_CHAR(URL),
        DECRYPT_CHAR(REMARKS), STAMP, LAST_USER
   FROM LINES)

SELECT LINK, DESCRIPTION_SHORT, DESCRIPTION_LONG, USERNAME, USER_PASSWORD, URL,
       REMARKS, STAMP, LAST_USER FROM BASE

RCDFMT LV00;

LABEL ON TABLE LINES_VIEW IS 'Secure key store - view decrypted informations';
